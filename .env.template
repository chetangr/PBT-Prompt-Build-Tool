# PBT Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORG_ID=your_org_id_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Azure OpenAI
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=your_deployment_name

# Ollama (Local Models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b
OLLAMA_TIMEOUT=300

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# PostgreSQL (if using direct connection)
DATABASE_URL=postgresql://username:password@localhost:5432/pbt_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pbt_db
POSTGRES_USER=pbt_user
POSTGRES_PASSWORD=your_postgres_password

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=pbt_prompts

# pgvector (if using with PostgreSQL)
PGVECTOR_ENABLED=true
PGVECTOR_DIMENSION=1536

# =============================================================================
# NOTIFICATION INTEGRATIONS
# =============================================================================

# Slack
SLACK_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#pbt-notifications
SLACK_USERNAME=PBT Bot

# Discord
DISCORD_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_CHANNEL_ID=your_discord_channel_id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================

# Notion
NOTION_TOKEN=secret_your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id
NOTION_PAGE_ID=your_notion_page_id

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Render
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=your_render_service_id

# Fly.io
FLY_API_TOKEN=your_fly_api_token_here
FLY_ORG_SLUG=your_fly_org_slug

# Docker
DOCKER_REGISTRY=registry.hub.docker.com
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# =============================================================================
# MARKETPLACE CONFIGURATION
# =============================================================================

# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# =============================================================================
# MULTIMODAL INTEGRATIONS
# =============================================================================

# Whisper (uses OpenAI API key)
WHISPER_MODEL=whisper-1

# Veo (Google)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=your_google_project_id
VEO_MODEL=veo-v1

# Midjourney (Discord-based)
MIDJOURNEY_SERVER_ID=your_midjourney_server_id
MIDJOURNEY_CHANNEL_ID=your_midjourney_channel_id
MIDJOURNEY_USER_TOKEN=your_discord_user_token

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here_generate_a_strong_one
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600
ENCRYPTION_KEY=your_encryption_key_here

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# File Upload
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.txt,.md,.yaml,.yml,.json
UPLOAD_PATH=./uploads

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Logging
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/pbt.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Tracing
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACE_SAMPLE_RATE=0.1

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Application Cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Model Response Cache
MODEL_CACHE_ENABLED=true
MODEL_CACHE_TTL=86400
MODEL_CACHE_SIZE=10000

# Embedding Cache
EMBEDDING_CACHE_ENABLED=true
EMBEDDING_CACHE_TTL=604800
EMBEDDING_CACHE_SIZE=50000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/pbt_test_db

# Test API Keys (use test/sandbox keys)
TEST_OPENAI_API_KEY=your_test_openai_key
TEST_ANTHROPIC_API_KEY=your_test_anthropic_key
TEST_STRIPE_SECRET_KEY=sk_test_your_test_stripe_key

# Test Modes
MOCK_EXTERNAL_APIS=false
TEST_TIMEOUT=300
PARALLEL_TESTS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
PROMPT_VERSIONING_ENABLED=true
PROMPT_TESTING_ENABLED=true
MODEL_COMPARISON_ENABLED=true
COST_OPTIMIZATION_ENABLED=true

# Advanced Features
MULTI_AGENT_CHAINS_ENABLED=true
RAG_OPTIMIZATION_ENABLED=true
I18N_SUPPORT_ENABLED=true
ANALYTICS_ENABLED=true

# Integrations
SUPABASE_INTEGRATION_ENABLED=true
SLACK_INTEGRATION_ENABLED=true
DISCORD_INTEGRATION_ENABLED=true
NOTION_INTEGRATION_ENABLED=true
STRIPE_INTEGRATION_ENABLED=true

# Multimodal
WHISPER_INTEGRATION_ENABLED=true
VEO_INTEGRATION_ENABLED=true
MIDJOURNEY_INTEGRATION_ENABLED=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection Pools
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# HTTP Client
HTTP_TIMEOUT=30
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE_CONNECTIONS=20
HTTP_KEEPALIVE_EXPIRY=5

# Worker Configuration
WORKER_PROCESSES=4
WORKER_THREADS=8
WORKER_TIMEOUT=300
WORKER_MAX_REQUESTS=1000

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_SCHEDULE=0 3 * * *
FILE_BACKUP_COMPRESSION=gzip

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
AUTO_RELOAD=true
DEBUG_TOOLBAR=true
PROFILING_ENABLED=false

# Testing
PYTEST_ARGS=--verbose --tb=short
COVERAGE_THRESHOLD=80

# Linting
LINT_ON_SAVE=true
TYPE_CHECKING=true
FORMAT_ON_SAVE=true

